{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "sh -c 'python jobs/scheduler.py & gunicorn main:app --bind 0.0.0.0:${PORT:-8080} --workers 2 --timeout 120'",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
